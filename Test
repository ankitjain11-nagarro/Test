CREATE TABLE IF NOT EXISTS campaign_email_reports(id VARCHAR(255) PRIMARY KEY, transaction_id VARCHAR(255), 
campaign_code VARCHAR(255), campaign_name VARCHAR(255), template_code VARCHAR(255), template_name VARCHAR(255), 
business_division VARCHAR(255), channel VARCHAR(255),subject VARCHAR(255),
error_code VARCHAR(255),error_desc VARCHAR(1000)
, sender_id VARCHAR(255), recipient_to VARCHAR(255),recipient_type VARCHAR(255),
message_id VARCHAR(255),content VARCHAR(65535), status VARCHAR(255), request_type VARCHAR(255)
, submit_date TIMESTAMP , correlation_id VARCHAR(255), priority BOOLEAN,  modified_date TIMESTAMP);

 
CREATE TABLE IF NOT EXISTS public.email_attachments
(
	id BIGINT NOT NULL DEFAULT "identity"(2267714, 0, '1,1'::text)
	,campaign_email_reports_fk VARCHAR(255)
	,attachment_filepath VARCHAR(255)
	,PRIMARY KEY (id)
);

-- public.rcs_cta_placeholder foreign keys
ALTER TABLE public.email_attachments ADD CONSTRAINT email_attachments_campaign_email_reports_fk_fkey 
FOREIGN KEY (campaign_email_reports_fk) REFERENCES public.campaign_email_reports(id);
 
ALTER TABLE email_attachments ALTER DISTKEY campaign_email_reports_fk;  
